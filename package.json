{
    "name": "lms",
    "version": "1.0.0",
    "description": "Discord bot that scraps the LMS website for notifications",
    "main": "dist/src/index.js",
    "repository": "https://github.com/apteryxxyz/lms",
    "author": "ApteryxXYZ",
    "license": "CC-BY-NC-ND-4.0",
    "private": true,
    "packageManager": "yarn@3.2.1",
    "scripts": {
        "clean": "rm -rf dist",
        "lint": "eslint --fix",
        "format": "prettier . --write",
        "test": "jest --coverage",
        "build": "tsc && tsc-alias",
        "dev": "cross-env NODE_ENV=development ts-node src/index.ts",
        "serve": "node .",
        "start": "pm2 start npm --name lms -- run serve",
        "restart": "pm2 restart lms",
        "stop": "pm2 stop lms",
        "pull": "git pull && yarn clean && yarn build && yarn restart"
    },
    "dependencies": {
        "@apteryxxyz/html-translator": "^1.2.2",
        "@maclary/context": "^0.1.2",
        "@types/cheerio": "0.22.0",
        "@wakeful-cloud/html-translator": "^1.1.2",
        "cat-loggr": "^1.2.2",
        "cheerio": "0.22.0",
        "discord.js": "dev",
        "dotenv": "^16.0.1",
        "fs-extra": "^10.1.0",
        "fuse.js": "^6.6.2",
        "maclary": "dev",
        "moment": "^2.29.3",
        "node-schedule": "^2.1.0",
        "puppeteer": "^14.1.0"
    },
    "devDependencies": {
        "@sapphire/eslint-config": "^4.3.5",
        "@types/fs-extra": "^9.0.13",
        "@types/node-schedule": "^2.1.0",
        "apteryx-eslint-config": "^1.0.0",
        "apteryx-prettier-config": "^1.0.1",
        "cross-env": "^7.0.3",
        "eslint": "^8.15.0",
        "prettier": "^2.6.2",
        "tsc-alias": "^1.6.7",
        "typescript": "^4.6.4"
    }
}